@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/DetailsView.css">

    <title>Categories</title>
</head>
<body>
    <div class="header">
        <a href="/Home/Index">
            <img alt="Qries" src="/img/logo1.png">
        </a>
    </div>
    <dl class="row">
        <dd class="col-test">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>Restaurant</th>
                        <th>City</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Enrollments)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Restaurant.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Restaurant.City)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
    <div>
        <p>
            <a href="/Reservations/Create" class="btn btn-md custom-btn">Book Now</a>
        </p>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
@if (Model.Name == "Italian")
{
    <img id="wine" src="/img/wine.jpg" alt="wine">
    <canvas id="myCanvas">
        Your browser does not support the HTML canvas tag.
    </canvas>
    <script>
        function myCanvas() {
            var c = document.getElementById("myCanvas");
            var ctx = c.getContext("2d");
            var img = document.getElementById("wine");
            ctx.drawImage(img, 10, 10);
        }
    </script>
}