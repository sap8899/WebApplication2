@{ ViewData["Title"] = "Tweet Page"; }
@model WebApplication1.Models.Tweets

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/extras.css">

    <title>Truffle</title>
</head>
<body>
    <div class="jumbotron">
        <h2>Post a Tweet</h2>
        <div class="col-sm-6">
            <img src="~/img/tweeter.png" class="img-fluid hero-img" alt="tweeter">
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">

            @using (Html.BeginForm("index", "Tweets", FormMethod.Post))
            {
                <div class="form-control">
                    <label class="label-primary">     Enter Your Tweet:  </label>@Html.TextBoxFor(m => m.tweets)<br />
                    <input type="submit" value="Submit" /> <br />
                </div>            
            }
        </div>
        <div class="col-md-6">
            <p class="hero-paragraph">

                <h1>
                    Here you can manage our Twitter page.
                    <br />
                    In the left side you can tweet directly to our twitter page!
                    <br />
                    Try it!
                </h1>
            </p>
        </div>
    </div>
</body>